<div class="container mt-5">
  <div class="row">
      <h5 class="ml-5 mb-4 bg-light">　注文履歴一覧　</h5>
  </div>
  
  <div>
    <table class="table table-bordered">
      <thead class="bg-light">
        <tr> <th>注文日</th><th>配送先</th><th>注文商品</th><th>支払金額</th><th>ステータス</th><th>注文詳細</th> </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td style="vertical-align: middle;">
              <%= order.created_at.strftime('%Y/%m/%d') %>
            </td>
            <td style="vertical-align: middle;">
              〒<%= order.postal_code %><br>
              <%= order.address %><br>
              <%= order.name %>
            </td>
            <td style="vertical-align: middle;">
              <!--<#%= @cart_items.item.name %>-->
            </td>
            <td style="vertical-align: middle;">
              <%= order.total_payment %>円
            </td>
            <td style="vertical-align: middle;">
              <%= order.status %>
            </td>
            <td style="vertical-align: middle; text-align: center;">
              <%= link_to '表示する', order_path(order.id), class:"btn btn-primary" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

