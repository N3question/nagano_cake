<div class="container my-5">
  <div class="row">
      <h5 class="ml-5 mb-4 bg-light">　注文履歴詳細　</h5>
  </div>

  <div class="row">
    <div class="col-6">
      <table class="table table-bordered">
        <p><strong>注文情報</strong></p>
        <tr>
          <th style="width:30%;">注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>
            〒<%= @order.postal_code %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th>支払い方法</th>
          <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
          <th>ステータス</th>
          <td style="color:green;"><%= @order.status_i18n %></td>
        </tr>
      </table>
    </div>
    <div class="col-4">
      <table class="table table-bordered">
        <p><strong>請求情報</strong></p>
        <tr>
          <th>商品合計</th>
          <td><%= number_to_currency(@total, unit: "", strip_insignificant_zeros: true) %>円</td>
        </tr>
        <tr>
          <th>配送料</th>
          <td><%= @order.shipping_cost %></td>
        </tr>
        <tr>
          <th><strong>ご請求額</strong></th>
          <td><%= @order.total_payment %></td>
        </tr>
      </table>
    </div>
  </div>
  
  <div class="row mt-2">
    <div class="col-8">
      <p><strong>注文内容</strong></p>
      <table class="table table-bordered">
        <thead>
            <tr>
              <th style="width:54%;">商品</th>
              <th style="width:20%;">単価（税込）</th>
              <th style="width:12%;">個数</th>
              <th style="width:12%;">小計</th>
            </tr>
        </thead>
        <tbody>
          <% @order.order_details.each do |order_detail| %>
            <tr>
              <td><%= order_detail.item.name %></td>
              <td><%= order_detail.price %></td>
              <td><%= order_detail.amount %></td>
              <td><%= order_detail.price*order_detail.amount %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>