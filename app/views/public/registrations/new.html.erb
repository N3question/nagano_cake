<div class="container my-5 ">
  <div class="row">
    <h5 class="ml-5 mb-4 bg-light">　新規会員登録　</h5>
  </div>
  
  <div class="row">
    <div class="">
      
      <table>
        <tbody>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
          
　　　　　　<div class="field">
              <%= f.label :email, 'メールアドレス' %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
　
            <div class="field">
              <%= f.label :email, 'メールアドレス' %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field">
              <%= f.label :password, 'パスワード' %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %>文字以上)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, 'パスワード(確認用)' %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>

            <div class="actions">
              <%= f.submit "新規登録", class:"btn btn-success btn-sm px-5" %>
            </div>
          <% end %>
        </tbody>
      </table><br>

  <div class="ml-5">
    <h5 class="bg-light">　既に登録済みの方　</h5>
    <div class="ml-5">
      <div class="ml-4">
         <%= render "public/shared/links" %> <!--viewファイル直下のファイル名を変更 publics => public-->
      </div>
  </div>

</div>