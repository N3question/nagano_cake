<p class="ml-3 my-3" style="color:red;">
  <%= flash[:notice] %>
</p>

<div class="container my-5 ">
  <div class="row">
    <h5 class="ml-5 mb-4 bg-light">　新規会員登録　</h5>
  </div>
  
  <div class="row">
    <div class="col-12">
    
        <!--resourceはdeviseに元々ある機能で、Customer.newを代入するような役割を果たしている。-->
        <!--<#%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>-->
        <%= form_with model: resource, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
          <table>
            <tbody>
                <tr>
                  <td>名前</td>
                  <td><%= f.label :last_name, '(性)', class:"ml-3" %></td>
                  <td><%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", :placeholder => "令和", class:"form-control" %></td>
                  <td><%= f.label :first_name, '(名)', class:"ml-5" %></td>
                  <td><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", :placeholder => "道子", class:"form-control" %></td>
                </tr>
          
                <tr>
                  <td>フリガナ</td>
                  <td><%= f.label :last_name_kana, '(セイ)', class:"ml-3" %></td>
                  <td><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", :placeholder => "レイワ", class:"form-control" %></td>
                  <td><%= f.label :first_name_kana, '(メイ)', class:"ml-5" %></td>
                  <td><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", :placeholder => "ミチコ", class:"form-control" %></td>
                </tr>
　
                <tr>
                  <td><%= f.label :email, 'メールアドレス' %></td>
                  <td></td>
                  <td><%= f.text_field :email, autofocus: true, autocomplete: "email", :placeholder => "sample@example.com", class:"form-control" %></td>
                </tr>
            
                <tr>
                  <td><%= f.label :postal_code, '郵便番号（ハイフンなし）' %></td>
                  <td></td>
                  <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "address", :placeholder => "0000000", class:"form-control" %></td>
                </tr>
        
                <tr>
                  <td><%= f.label :address, '住所' %></td>
                  <td></td>
                  <td>
                    <%= f.text_area :address, autofocus: true, autocomplete: "address", :placeholder => "東京都渋谷区代々木神町0-0", class:"form-control" %>
                  </td>
                </tr>
            
                <tr>
                  <td><%= f.label :telephone_number, '電話番号（ハイフンなし）' %></td>
                  <td></td>
                  <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", :placeholder => "00000000000", class:"form-control" %></td>
                </tr>
        
                <tr>
                  <td>
                    <%= f.label :password, 'パスワード' %>
                    <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %>文字以上)</em>
                    <% end %>
                  </td>
                  <td></td>
                  <td><%= f.password_field :password, autocomplete: "new-password", class:"form-control" %></td>
                </tr>

                <tr>
                  <td><%= f.label :password_confirmation, 'パスワード(確認用)' %></td>
                  <td></td>
                  <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %></td>
                </tr>

                <tr>
                  <td></td>
                  <td></td>
                  <td><%= f.submit "新規登録", class:"btn btn-success btn-sm px-5 mt-4" %></td>
                </tr>
          
            </tbody>
          </table>
        <% end %>
    </div>
  </div>
  
  <div class="row">
    <h5 class="ml-5 mt-4 bg-light">　既に登録済みの方　</h5>
  </div>
  <div class="row ml-5">
    <div class="ml-4 mt-4">
      <%= render "public/shared/links" %> <!--viewファイル直下のファイル名を変更 publics => public-->
    </div>
  </div>
</div>