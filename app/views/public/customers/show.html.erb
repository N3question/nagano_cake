<div class="container my-5">
  <div class="row">
      <h5 class="ml-5 mb-4 bg-light">　マイページ　</h5>
  </div>

  <div class="row">
    <div class="col-md-7">
      <table>
          <tr>
            <th>登録情報</th>
            <td class="pl-4"><%= link_to '編集する', edit_information_path, class:"btn btn-success btn-sm px-3" %></td>
          </tr>
      </table>
    
      <table class="table table-bordered mt-3">
        <tr> <th class="bg-light">氏名</th><td><%= current_customer.last_name %>　<%= current_customer.first_name %></td> </tr>
        <tr> <th class="bg-light">カナ</th><td><%= current_customer.last_name_kana %>　<%= current_customer.first_name_kana %></td> </tr>
        <tr> <th class="bg-light">郵便番号</th><td><%= current_customer.postal_code %></td> </tr>
        <tr> <th class="bg-light">住所</th><td><%= current_customer.address %></td> </tr>
        <tr> <th class="bg-light">電話番号</th><td><%= current_customer.telephone_number %></td> </tr>
        <tr> <th class="bg-light">メールアドレス</th><td><%= current_customer.email %></td> </tr>
      </table>
      
      <table>
          <tr>
            <th>配送先</th>
            <td class="pl-4"><%= link_to '一覧をみる', addresses_path, class:"btn btn-primary btn-sm px-4" %></td>
          </tr>
          <tr>
            <th>注文履歴</th>
            <td class="pl-4"><%= link_to '一覧をみる', orders_path, class:"btn btn-primary btn-sm px-4" %></td>
          </tr>
      </table>
    </div>
  </div>
</div>