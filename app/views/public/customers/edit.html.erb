<div class="container my-5">
  <div class="row">
      <h5 class="ml-5 mb-4 bg-light">　会員情報編集　</h5>
  </div>
  
  <!--レイアウトが未完了-->
  <div class="row">
    <div class="col-12">
        
        <%= form_with model: @customer, url: information_path, method: :patch , local: true  do |f| %>
          <table>
            <tr>
              <td>氏名</td>
              <td><%= f.text_field :last_name, autofocus: true, class:"ml-5 p-1 form-control", style:"width:200px;" %></td>
              <td><%= f.text_field :first_name, autofocus: true, class:"ml-5 p-1 form-control", style:"width:200px;" %></td>
              <td></td>
            </tr>
            <tr>
              <td>フリガナ</td>
              <td><%= f.text_field :last_name_kana, autofocus: true, class:"ml-5 p-1 form-control", style:"width:200px;" %></td>
              <td><%= f.text_field :first_name_kana, autofocus: true, class:"ml-5 p-1 form-control", style:"width:200px;" %></td>
              <td></td>
            </tr>
            <tr>
              <td>郵便番号</td>
              <td><%= f.text_field :postal_code, autofocus: true, class:"ml-5 p-1 form-control", style:"width:200px;" %></td>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td>住所</td>
              <td><%= f.text_area :address, autofocus: true, class:"ml-5 p-1 form-control", style:"width:100%;" %></td>
            </tr>
            <tr>
              <td>電話番号</td>
              <td><%= f.text_field :telephone_number, autofocus: true, class:"ml-5 p-1 form-control", style:"width:200px;" %></td>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= f.text_field :email, autofocus: true, class:"ml-5 p-1 form-control", style:"width:200px;" %></td>
              <td></td>
              <td></td>
            </tr>
            <tr>
              <td></td>
              <td><%= f.submit "編集内容を保存", class:"btn btn-success btn-sm px-5 mt-3 ml-5" %></td>
              <td></td>
              <td><%= link_to '退会する', unsubscribe_path, class:"btn btn-danger btn-sm px-3 mt-3" %></td>
            </tr>
          </table>
        <% end %>
        
    </div>
  </div>
</div>