<div class="container mt-5">
  <div class="row mx-auto">

    <div class="col-3">
      <div class="border-top border-left border-right border-dark">
        <p class="text-center px-2 py-1 mb-0">ジャンル検索</p>
      </div>
      <div class="border border-dark pt-3 px-3 pb-5">
        <% @genres.each do |genre| %>
          <p class="mb-3">
            <%= link_to root_path, class:"text-dark" do %>
              <%= genre.name %>
            <% end %>
          </p>
        <% end %>
      </div>
    </div>
    
    <div class="col-8 offset-1 px-0">
      <div>
        <p>
          <h3><b>商品一覧</b></h3><small>(全<%= @items_count.count %>件)</small>
        </p>
      </div>
      
      <div class="d-flex flex-wrap">
          <% @items.each do |item| %>
            <table class="mb-3 mr-2" style="width:170px;">
                <tr class="d-flex align-items-start">
                    <td>
                      <%= link_to item_path(item.id), class:"text-dark" do %>
                        <%= image_tag item.image, size: "170x100", style:"object-fit: cover;" %>
                      <% end %>
                    </td>
                </tr>
                <tr class="d-flex align-items-start">
                    <td class="py-2">
                      <small><%= item.name %></small>
                    </td>
                </tr>
                <tr>
                  <div>
                    <td>￥<%= item.price.to_s(:delimited) %></td>
                  </div>
                </tr>
            </table>
          <% end %>
      </div>
      <div class="my-4">
        <div class="d-flex justify-content-center">
        <%= paginate @items %>
        </div>
      </div>
    </div>
    
  </div>
</div>