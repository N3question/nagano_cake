<div class="container m-5">
  <div class="row">

    <div class="col-3">
      <div class="border-top border-left border-right border-dark">
        <p class="text-nowrap text-center px-2 mb-0">ジャンル検索</p>
      </div>
      <div class="border border-dark p-4">
        <% @genres.each do |genre| %>
          <p class="">
            <%= link_to root_path do %>
              <%= genre.name %>
            <% end %>
          </p>
        <% end %>
      </div>
    </div>
    
    <div class="col-8 ml-4">
      <div>
          <h3><b>商品一覧</b></h3><p>全<%= @items.count %>件</ps>
      </div>
      
      <div class="d-flex flex-wrap">
          <% @items.each do |item| %>
            <table style="width:170px;">
                <tr class="d-flex align-items-start">
                    <td>
                      <% if item.image.attached? %>
                        <%= image_tag item.image, size: "170x100", style:"object-fit: cover;" %>
                      <% else %>
                        <%= image_tag 'no_image', size: "170x100", class:"border mr-3", style:"object-fit: cover;" %>
                      <% end %>
                    </td>
                </tr>
                <tr class="d-flex align-items-start">
                    <td>
                      <%= link_to item_path(item.id) do %>
                        <%= item.name %>
                      <% end %>
                    </td>
                </tr>
                <tr>
                    <td>￥<%= item.price.to_s(:delimited) %></td>
                </tr>
            </table>
          <% end %>
      </div>
    </div>
    
  </div>
</div>