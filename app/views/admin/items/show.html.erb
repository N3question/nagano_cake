<div class="container my-5 ">
  <div class="row">
      <%= link_to admin__path, style:"color:#333;" do %>
        <big>
          <i class="bi bi-arrow-left-circle"></i>
        </big>
      <% end %>
      <h5 class="ml-5 mb-5 bg-light">　商品詳細　</h5>
  </div>

  <div class="row ml-5">
    <div class="col-3">
        <%= image_tag @item.image, size: "250x180", class:"img-fluid", style:"max-width: 90%; , height: auto;", style:"object-fit: cover;" %>
    </div>
    <div class="col-8 ml-3">
      <table class="table table-borderless table-sm">
        <tr>
          <td>商品名</td>
          <td><%= @item.name %></td>
        </tr>  
        <tr>
          <td>商品説明</td>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td>税込価格<br><small>(税抜価格)</small></td>
          <td style="vertical-align:middle;"><%= @item.add_tax_price.to_s(:delimited) %> （<%= @item.price.to_s(:delimited) %>）円</td>
        </tr>
        <tr>
          <td>販売ステータス</td>
          <td>
              <% if @item.is_active? %>
                <p class="text-success mb-0"><strong>販売中</strong></p>
              <% else %>
                <p class="text-secondary mb-0"><strong>販売停止中</strong></p>
              <% end %>
          </td>
        </tr>
        <tr>
          <td></td>
          <td>
            <%= link_to '編集する', edit_admin_item_path(@item.id), class:"btn btn-success px-5 py-2 mt-4 text-nowrap" %>
            <%= link_to '削除', admin_item_path(@item.id), method: :delete, class:"btn btn-danger px-3 py-2 mt-4 ml-4", data: {confirm: "削除しますか？"}  %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>