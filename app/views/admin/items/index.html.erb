<div class="container mt-5">
  <div class="row mb-3">
      <div class="d-flex align-items-center">
        <h5 class="ml-5 mb-0 bg-light">　商品一覧　</h5>
      </div>
      <div class="ml-auto mt-0 mr-5">
        <%= link_to new_admin_item_path, class:"my-bt" do%>
          <i class="bi bi-plus-circle"></i>
        <% end %>
      </div>
  </div>
  
  <div class="row">
    <div class="col-12 mx-auto">
      
          <table class="table">
            <thead class="bg-light">
              <tr>
                <th>商品ID</th><th>商品名</th><th>税抜価格</th><th>ジャンル</th><th>ステータス</th>
              </tr>
            </thead>
            <tbody>
              <% @items.each do |item| %>
                <tr>
                  <td><%= item.id %></td>
                  <td style="text-decoration: underline;">
                    <%= link_to admin_item_path(item.id), class:"text-dark" do %>
                      <%= item.name %>
                    <% end %>
                  </td>
                  <td><%= item.price.to_s(:delimited) %></td>
                  <td><%= item.genre.name %></td>
                  <td>
                    <!--販売ステータスの色変更-->
                    <!--基本的にif式はtrueで返ってくる。-->
                    <!--pタグは１つの要素をまとめるブロック要素、
                        strongタグはインライン要素-->
                    <% if item.is_active %>
                      <p class="text-success"><strong>販売中</strong></p>
                    <% else %>
                      <p class="text-secondary"><strong>販売停止中</strong></p>
                    <% end %>
                </td>
              </tr>
          </tbody>
        </table>
        <div class="my-4">
          <div class="d-flex justify-content-center">
            <%= paginate @items %>
          </div>
        </div>
        
    </div>
  </div>
</div>