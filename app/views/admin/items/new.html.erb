<h4>商品新規投稿画面</h4>
<% form_with model: [:admin, @item], local: true do |f| %>
  <label>商品画像</label>
  <% f.file_field :image, accept: "image/*" %>
  <label>商品名</label>
  <% f.text_field :name %>
  <label>商品説明</label>
  <% f.text_area :introduction %>
  <label>ジャンル</label>
  <label>税抜価格</label>
  <label>販売ステータス</label>
<% end %>


