<div class="container mt-5">
  <div class="row">
    <h5 class="ml-5 mb-5 bg-light">　ジャンル編集　</h5>
  </div>
  
  <div class="row">
    <%= form_with model: [:admin, @genre], local: true do |f| %>
      <label>ジャンル名</label>
      <%= f.text_field :name, class:"ml-5" %>
      <%= f.submit '変更を保存', class:"btn btn-success ml-5 px-5" %>
    <% end %>
    <%= link_to '削除', admin_genre_path(@genre.id), method: :delete, class:"btn btn-danger ml-5", data: {confirm: "削除しますか？"} %>
  </div>
</div>

