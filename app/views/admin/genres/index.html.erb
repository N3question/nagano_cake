<div class="container my-5 ">
  <div class="row">
    <div class="">
      <h4 class="ml-5 mb-5">ジャンル一覧・追加</h4>
        <%= form_with model: @genre, url: '/admin/genres', method: :post do |f| %>
          <label>ジャンル名</label>
          <%= f.text_field :name, :placeholder => "ジャンル名", class:"ml-5" %>
          <%= f.submit '新規登録', class:"btn btn-success ml-5" %>
        <% end %>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    
    <div class="">
      <table class="table">
        
        <thead> <!--追加-->
          <tr> <th>ジャンル</th><th></th> </tr>
        </thead> <!--追加-->
        
        <tbody> <!--追加-->
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class:"btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody><!--追加-->
        
      </table>  
    </div>
  
  </div>
</div>