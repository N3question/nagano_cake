<div class="container my-5 ">
  <div class="row">
      <h5 class="mb-5 bg-light">　<%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細　</h5>
  </div>
  
  <div class="row">
    <div class="col-8">
        
        <table class="">
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td><%= @customer.is_deleted ? '退会' : '有効' %></td>
          </tr>
          <tr>
            <td></td>
            <td>
                <%= link_to '編集する', edit_admin_customer_path(@customer.id), class:"btn btn-success btn-sm px-3 mt-4" %>
                <%= link_to '注文一覧を見る', root_path, class:"btn btn-primary btn-sm ml-5 px-3 mt-4" %>
            </td>
          </tr>
        </table>
        
    </div>
  </div>
  
</div>